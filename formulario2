    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registrationForm');
            const senha = document.getElementById('senha');
            const confirmarSenha = document.getElementById('confirmarSenha');
            
            // Validação em tempo real da confirmação de senha
            confirmarSenha.addEventListener('input', function() {
                if (senha.value !== confirmarSenha.value) {
                    confirmarSenha.setCustomValidity('As senhas não coincidem');
                } else {
                    confirmarSenha.setCustomValidity('');
                }
            });
            
            // Validação do formulário
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    
                    // Forçar exibição de mensagens de erro para todos os campos inválidos
                    const campos = form.querySelectorAll('input:invalid');
                    campos.forEach(campo => {
                        campo.focus();
                        campo.blur();
                    });
                    
                    // Focar no primeiro campo inválido
                    if (campos.length > 0) {
                        campos[0].focus();
                    }
                } else {
                    event.preventDefault();
                    alert('Formulário válido! Em um cenário real, os dados seriam enviados.');
                    // form.submit(); // Em um caso real, descomente esta linha
                }
                
                form.classList.add('validated');
            });
        });
    </script>
